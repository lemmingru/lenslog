<% provide(:title, "Log in") %>

<h1>Log in</h1>

<div class="ui grid">
  <div class="eight wide column centered">
    <%= form_with(url: login_path, scope: :session, class: 'ui form') do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'ui input' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'ui input' %>
      </div>

      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me, class: 'hidden' %>
          <%= f.label :remember_me do %>
            <%= content_tag(:span, 'Remember me on this computer') %>
          <% end %>
        </div>
      </div>

      <%= f.submit "Log in", class: 'ui primary button' %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
