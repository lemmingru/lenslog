<h1 class="ui header"><%= t('views.lenses.show.header') %> "<%= @lens.lens_type.manufacturer %> (<%= @lens.lens_type.prescription %>)"</h1>

<div class="ui segment">
  <p><strong><%= t('views.lenses.show.usage_days') %>:</strong> <%= @lens.usage_days %></p>
  <div class="ui relaxed divided list">
    <% @usages.each do |usage| %>
      <div class="item">
        <%= l(usage.usage_date) %> - <%= usage.usage_days %> <%= t('views.lenses.show.day') %>
        <%= link_to t('views.lenses.show.delete'), delete_usage_lens_path(@lens, usage), class: 'mini ui red button' %>

      </div>
    <% end %>
  </div>

</div>

<%= link_to t('views.lenses.show.back'), lenses_path, class: 'ui button' %>
