<div class="ui container">
  <h1 class="ui header"><%= t('views.lenses.index.header') %></h1>

  <div class="ui grid">
    <div class="six wide column">
      <table class="ui table">
        <thead>
          <tr>
            <th><%= t('views.lenses.index.name') %></th>
            <th><%= t('views.lenses.index.d') %></th>
            <th><%= t('views.lenses.index.last_usage') %></th>
            <th><%= t('views.lenses.index.action') %></th>
          </tr>
        </thead>

        <tbody>
        <% @lenses.each do |lens| %>
          <tr class="<%= 'negative' if lens.usage_days >= lens.lens_type.wearing_period %>">
            <td><%= lens.lens_type.manufacturer %> (<%= lens.lens_type.prescription %>)</td>
            <td><%= lens.usage_days %> <%= t('views.lenses.index.out_of') %> <%= lens.lens_type.wearing_period %></td>
            <td>12.12.12</td>
            <td>Использовать<br>
            Заменить<br>
            Выкинуть</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
